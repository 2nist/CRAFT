{
  "name": "electron-vite-react-app",
  "version": "1.0.0",
  "description": "Electron app with Vite, React, and Tailwind CSS",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run electron:build",
    "preview": "vite preview",
    "electron:dev": "npm run build:electron && concurrently --no-kill-others \"vite --port 5174\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "npm run build:electron && npm run build:renderer",
    "build:electron": "vite build --config vite.config.electron.js",
    "build:renderer": "vite build",
    "dist": "npm run electron:build && electron-builder --win --publish=never",
    "dist:dir": "npm run electron:build && electron-builder --win --dir",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky",
    "lint": "eslint .",
    "manual:build": "node scripts/build-manual.mjs",
    "check:nas": "node ./scripts/nas-diagnostics.js"
  },
  "keywords": [
    "electron",
    "vite",
    "react",
    "tailwind"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^30.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "marked": "^12.0.2",
    "postcss": "^8.4.33",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "puppeteer": "^23.7.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "ajv": "^8.12.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "lucide-react": "^0.294.0",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-rnd": "^10.5.2",
    "react-router-dom": "^7.9.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --max-warnings=0"
    ]
  },
  "build": {
    "appId": "com.electron.app",
    "productName": "Craft Automation CPQ",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "src/data/**/*",
      "!node_modules/sqlite3/build-tmp-napi-*/**/*"
    ],
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ],
      "sign": false,
      "certificateFile": null,
      "certificatePassword": null,
      "verifyUpdateCodeSignature": false,
      "signDlls": false,
      "rfc3161TimeStampServer": null,
      "timeStampServer": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Craft Automation CPQ",
      "license": "LICENSE",
      "deleteAppDataOnUninstall": false
    },
    "extraMetadata": {
      "main": "dist-electron/main.cjs"
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "afterPack": "scripts/after-pack.cjs"
  }
}
