{
  "name": "craft-tools-hub",
  "version": "1.0.0",
  "description": "CPQ (Configure, Price, Quote) system for industrial automation - Desktop application for managing quotes, configurations, and pricing",
  "main": "electron/main.js",
  "type": "module",
  "author": "Craft Automation",
  "repository": {
    "type": "git",
    "url": "https://github.com/2nist/craft_tools_hub.git"
  },
  "homepage": "https://github.com/2nist/craft_tools_hub#readme",
  "bugs": {
    "url": "https://github.com/2nist/craft_tools_hub/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run electron:build",
    "preview": "vite preview",
    "electron:dev": "npm run build:electron && concurrently --no-kill-others \"vite --port 5174\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "npm run build:electron && npm run build:renderer",
    "build:electron": "vite build --config vite.config.electron.js",
    "build:renderer": "vite build",
    "dist": "npm run electron:build && electron-builder --win --publish=never",
    "dist:portable": "npm run electron:build && node build-portable-final.mjs",
    "dist:installer": "npm run electron:build && node build-installer-standalone.mjs",
    "package:portable": "node -e \"const fs=require('fs'); const path=require('path'); const src='release/win-unpacked'; const dest='release'; if(fs.existsSync(src)) { console.log('âœ“ Portable application ready at:', src); console.log('  Executable: ' + src + '/Craft Automation CPQ.exe'); } else { console.log('Build directory not found'); }\"",
    "dist:dir": "npm run electron:build && electron-builder --win --dir",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky",
    "lint": "eslint .",
    "manual:build": "node scripts/build-manual.mjs",
    "check:nas": "node ./scripts/nas-diagnostics.js"
  },
  "keywords": [
    "cpq",
    "quote",
    "configurator",
    "pricing",
    "electron",
    "industrial-automation",
    "bom",
    "sql-sync",
    "offline-first",
    "desktop-app"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^30.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "marked": "^12.0.2",
    "postcss": "^8.4.33",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "puppeteer": "^23.7.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "ajv": "^8.12.0",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "electron-store": "^11.0.2",
    "express": "^5.1.0",
    "lucide-react": "^0.294.0",
    "mssql": "^12.2.0",
    "papaparse": "^5.5.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-rnd": "^10.5.2",
    "react-router-dom": "^7.9.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --max-warnings=0"
    ]
  },
  "build": {
    "appId": "com.electron.app",
    "productName": "Craft Automation CPQ",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "src/data/**/*",
      "src/database/**/*",
      "src/services/**/*",
      "database/**/*",
      "public/**/*",
      "electron/sync-*.js",
      "electron/DatabaseSyncService.js",
      "node_modules/better-sqlite3/**/*",
      "node_modules/mssql/**/*",
      "node_modules/tedious/**/*",
      "node_modules/electron-store/**/*",
      "node_modules/axios/**/*",
      "!node_modules/*/test/**/*",
      "!node_modules/*/docs/**/*",
      "!node_modules/*/*.md"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": false,
      "forceCodeSigning": false,
      "certificateFile": null,
      "certificatePassword": null,
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": [
        "sha256"
      ],
      "signDlls": false,
      "rfc3161TimeStampServer": null,
      "timeStampServer": null
    },
    "asar": false,
    "asarUnpack": [],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Craft Automation CPQ",
      "license": "LICENSE",
      "deleteAppDataOnUninstall": false,
      "installerIcon": null,
      "uninstallerIcon": null,
      "installerHeaderIcon": null,
      "installerSidebar": null,
      "uninstallerSidebar": null,
      "include": "installer.nsi"
    },
    "extraMetadata": {
      "main": "dist-electron/main.cjs"
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "afterPack": "scripts/after-pack.cjs"
  }
}
